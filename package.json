{
	"name": "factorio-blueprint-playground",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "wrangler pages dev --port 5173 -- vite",
		"preview": "wrangler pages dev dist --port 5174",
		"build": "vite build && wrangler pages functions build",
		"test": "vitest",
		"test:coverage": "vitest run --coverage",
		"generate:routes": "npx @tanstack/router-cli generate",
		"build:types": "npm run generate:routes && tsc --noEmit --project tsconfig.routes.json",
		"lint:fix": "npx @biomejs/biome check --write .",
		"ci:test": "vitest run",
		"ci:lint": "npx @biomejs/biome lint .",
		"ci:format": "npx @biomejs/biome format .",
		"format:css": "npx prettier --write \"src/**/*.css\"",
		"ci:typecheck": "tsc --noEmit",
		"all": "npm run generate:routes && npm run lint:fix && npm run ci:typecheck && npm run build && npm run ci:test"
	},
	"dependencies": {
		"@sentry/browser": "^9.36.0",
		"@sentry/cloudflare": "^9.39.0",
		"@sentry/react": "^9.39.0",
		"@tanstack/react-query": "^5.83.0",
		"@tanstack/react-query-devtools": "^5.83.0",
		"@tanstack/react-router": "^1.128.0",
		"@tanstack/react-store": "^0.7.3",
		"date-fns": "^4.1.0",
		"dexie": "^4.0.11",
		"dexie-react-hooks": "^1.1.7",
		"fflate": "^0.8.2",
		"lucide-react": "^0.525.0",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"react-error-boundary": "^6.0.0",
		"zod": "^4.0.5"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.1.1",
		"@cloudflare/workers-types": "^4.20250715.0",
		"@playwright/test": "^1.54.1",
		"@tanstack/eslint-plugin-router": "^1.125.0",
		"@tanstack/router-cli": "^1.128.0",
		"@tanstack/router-plugin": "^1.128.0",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/node": "^24.0.14",
		"@types/react": "^19.1.8",
		"@types/react-dom": "^19.1.6",
		"@vitejs/plugin-react": "^4.7.0",
		"@vitest/coverage-v8": "^3.2.4",
		"fake-indexeddb": "^6.0.1",
		"globals": "^16.3.0",
		"jsdom": "^26.1.0",
		"sharp": "^0.34.3",
		"tsx": "^4.20.3",
		"typescript": "~5.8.3",
		"vite": "^7.0.5",
		"vitest": "^3.0.2",
		"wrangler": "^4.25.0"
	}
}
