{
	"name": "factorio-blueprint-playground",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"dev:pages": "wrangler pages dev --proxy=5173 --port=8788",
		"dev:functions": "wrangler pages dev . --port=8788",
		"preview": "wrangler pages dev dist --port 5174",
		"build": "vite build && wrangler pages functions build",
		"test": "vitest",
		"test:coverage": "vitest run --coverage",
		"generate:routes": "npx @tanstack/router-cli generate",
		"build:types": "npm run generate:routes && tsc --noEmit --project tsconfig.routes.json",
		"lint:fix": "npx @biomejs/biome check --write .",
		"ci:test": "vitest run",
		"ci:lint": "npx @biomejs/biome lint .",
		"ci:format": "npx @biomejs/biome format .",
		"format:css": "npx prettier --write \"src/**/*.css\"",
		"ci:typecheck": "tsc --noEmit",
		"all": "npm run generate:routes && npm run lint:fix && npm run ci:typecheck && npm run build && npm run ci:test"
	},
	"dependencies": {
		"@sentry/browser": "^10.6.0",
		"@sentry/cloudflare": "^10.7.0",
		"@sentry/react": "^10.7.0",
		"@tanstack/react-query": "^5.85.5",
		"@tanstack/react-query-devtools": "^5.85.5",
		"@tanstack/react-router": "^1.131.28",
		"@tanstack/react-store": "^0.7.4",
		"date-fns": "^4.1.0",
		"dexie": "^4.2.0",
		"dexie-react-hooks": "^4.2.0",
		"fflate": "^0.8.2",
		"lucide-react": "^0.542.0",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"react-error-boundary": "^6.0.0",
		"zod": "^4.1.4"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.2",
		"@cloudflare/workers-types": "^4.20250828.0",
		"@playwright/test": "^1.55.0",
		"@tanstack/eslint-plugin-router": "^1.131.2",
		"@tanstack/react-router-devtools": "^1.131.28",
		"@tanstack/router-cli": "^1.131.28",
		"@tanstack/router-plugin": "^1.131.28",
		"@testing-library/jest-dom": "^6.8.0",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/node": "^24.3.0",
		"@types/react": "^19.1.11",
		"@types/react-dom": "^19.1.8",
		"@vitejs/plugin-react": "^5.0.1",
		"@vitest/coverage-v8": "^3.2.4",
		"fake-indexeddb": "^6.1.0",
		"globals": "^16.3.0",
		"jsdom": "^26.1.0",
		"sharp": "^0.34.3",
		"tsx": "^4.20.5",
		"typescript": "~5.9.2",
		"vite": "^7.1.3",
		"vitest": "^3.0.2",
		"wrangler": "^4.33.0"
	}
}
