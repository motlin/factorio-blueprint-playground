{
	"name": "factorio-blueprint-playground",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"dev:pages": "wrangler pages dev --proxy=5173 --port=8788",
		"dev:functions": "wrangler pages dev . --port=8788",
		"preview": "wrangler pages dev dist --port 5174",
		"build": "vite build && wrangler pages functions build",
		"test": "vitest",
		"test:coverage": "vitest run --coverage",
		"generate:routes": "npx @tanstack/router-cli generate",
		"build:types": "npm run generate:routes && tsc --noEmit --project tsconfig.routes.json",
		"lint:fix": "npx @biomejs/biome check --write .",
		"ci:test": "vitest run",
		"ci:lint": "npx @biomejs/biome lint .",
		"ci:format": "npx @biomejs/biome format .",
		"format:css": "npx prettier --write \"src/**/*.css\"",
		"ci:typecheck": "tsc --noEmit",
		"all": "npm run generate:routes && npm run lint:fix && npm run ci:typecheck && npm run build && npm run ci:test"
	},
	"dependencies": {
		"@sentry/browser": "^10.23.0",
		"@sentry/cloudflare": "^10.24.0",
		"@sentry/react": "^10.24.0",
		"@tanstack/react-query": "^5.90.7",
		"@tanstack/react-query-devtools": "^5.90.2",
		"@tanstack/react-router": "^1.135.2",
		"@tanstack/react-store": "^0.8.0",
		"date-fns": "^4.1.0",
		"dexie": "^4.2.1",
		"dexie-react-hooks": "^4.2.0",
		"fflate": "^0.8.2",
		"lucide-react": "^0.553.0",
		"react": "^19.2.0",
		"react-dom": "^19.2.0",
		"react-error-boundary": "^6.0.0",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.4",
		"@cloudflare/workers-types": "^4.20251111.0",
		"@playwright/test": "^1.56.1",
		"@tanstack/eslint-plugin-router": "^1.133.19",
		"@tanstack/react-router-devtools": "^1.135.2",
		"@tanstack/router-cli": "^1.135.2",
		"@tanstack/router-plugin": "^1.135.2",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/node": "^24.10.1",
		"@types/react": "^19.2.2",
		"@types/react-dom": "^19.2.2",
		"@vitejs/plugin-react": "^5.1.1",
		"@vitest/coverage-v8": "^4.0.8",
		"fake-indexeddb": "^6.2.5",
		"globals": "^16.5.0",
		"jsdom": "^27.1.0",
		"sharp": "^0.34.5",
		"tsx": "^4.20.6",
		"typescript": "~5.9.3",
		"vite": "^7.2.2",
		"vitest": "^4.0.1",
		"wrangler": "^4.46.0"
	}
}
