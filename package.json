    "lucide-react": "^0.460.0",
    "preact": "^10.24.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@preact/preset-vite": "^2.9.1",
    "@tanstack/router-devtools": "^1.82.1",
    "@tanstack/router-plugin": "^1.81.9",
    "@testing-library/jest-dom": "^6.6.3",
